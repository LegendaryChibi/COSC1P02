    public Noisy ( ) {
      Sound theSound;
      theSound = new Sound();
      
      player = new SoundPlayer();
      
      player.placeSound(theSound);
      
      player.waitForUser();
      
      makeNoisy(theSound, NOISE_LEVEL);
      
      player.close();
      
      theSound.save();
        
    }; // constructor
    
    
    // methods
    
